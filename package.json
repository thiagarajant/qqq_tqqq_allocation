{
  "name": "stock-market-analysis",
  "version": "1.0.0",
  "description": "A comprehensive web application for stock market analysis, portfolio simulation, and drawdown cycle detection",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-all": "npm install && cd backend && npm install && cd frontend && npm install",
    
    "docs:update": "./scripts/update-docs.sh --update-versions",
    "docs:check": "./scripts/update-docs.sh --check-consistency",
    "docs:validate": "./scripts/update-docs.sh --validate-structure",
    "docs:summary": "./scripts/update-docs.sh --generate-summary",
    "docs:maintain": "./scripts/update-docs.sh --all",
    
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:frontend": "eslint frontend/src --ext .ts,.tsx",
    "lint:backend": "eslint backend --ext .ts,.js",
    
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "jest --projects=frontend",
    "test:backend": "jest --projects=backend",
    "test:ci": "jest --ci --coverage --watchAll=false",
    
    "type-check": "tsc --noEmit",
    "type-check:frontend": "tsc --noEmit --project frontend/tsconfig.json",
    "type-check:backend": "tsc --noEmit --project backend/tsconfig.json",
    
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm audit --audit-level=moderate",
    
    "quality:check": "npm run lint && npm run format:check && npm run type-check && npm run test:ci",
    "quality:fix": "npm run lint:fix && npm run format && npm run security:audit",
    
    "pre-commit": "npm run quality:check",
    "prepare": "husky install",
    
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "sqlite3": "^5.1.6",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    
    "// TypeScript and Type Checking",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/sqlite3": "^3.1.11",
    "typescript": "^5.3.0",
    
    "// ESLint and Code Quality",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-config-prettier": "^9.1.0",
    
    "// Prettier and Formatting",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    
    "// Testing Framework",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "babel-jest": "^29.7.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    
    "// Git Hooks and Quality Assurance",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    
    "// Performance and Bundle Analysis",
    "webpack-bundle-analyzer": "^4.10.1",
    "lighthouse": "^11.6.0",
    "cross-env": "^7.0.3",
    
    "// Security Tools",
    "npm-audit-resolver": "^4.0.0",
    "snyk": "^1.1260.0"
  },
  "keywords": [
    "stock",
    "market",
    "analysis",
    "portfolio",
    "simulation",
    "drawdown",
    "cycles",
    "react",
    "express",
    "typescript",
    "qqq",
    "tqqq"
  ],
  "author": "Stock Analysis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
