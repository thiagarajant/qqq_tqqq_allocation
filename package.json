{
  "name": "stock-market-analysis",
  "version": "1.0.0",
  "description": "A comprehensive web application for stock market analysis, portfolio simulation, and drawdown cycle detection",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-all": "npm install && cd backend && npm install && cd frontend && npm install",
    "docs:update": "./scripts/update-docs.sh --update-versions",
    "docs:check": "./scripts/update-docs.sh --check-consistency",
    "docs:validate": "./scripts/update-docs.sh --validate-structure",
    "docs:summary": "./scripts/update-docs.sh --generate-summary",
    "docs:maintain": "./scripts/update-docs.sh --all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "sqlite3": "^5.1.6",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "stock",
    "market",
    "analysis",
    "portfolio",
    "simulation",
    "drawdown",
    "cycles",
    "react",
    "express",
    "typescript",
    "qqq",
    "tqqq"
  ],
  "author": "Stock Analysis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
