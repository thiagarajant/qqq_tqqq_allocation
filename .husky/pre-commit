#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run quality checks before commit using Docker
echo "ğŸ” Running pre-commit quality checks in Docker containers..."

# Check if Docker services are running
echo "ğŸ³ Checking Docker services..."
if ! docker-compose ps | grep -q "Up"; then
  echo "âŒ Docker services are not running. Starting development environment..."
  docker-compose --profile dev up -d
  echo "â³ Waiting for services to start..."
  sleep 15
fi

# Run linting in containers
echo "ğŸ“ Checking code style..."
docker-compose exec -T stock-market-analysis-webapp npm run lint:frontend
docker-compose exec -T stock-market-analysis-webapp npm run lint:backend

# Run formatting check
echo "ğŸ¨ Checking code formatting..."
docker-compose exec -T stock-market-analysis-webapp npm run format:check

# Run type checking
echo "ğŸ” Checking TypeScript types..."
docker-compose exec -T stock-market-analysis-webapp npm run type-check:frontend
docker-compose exec -T stock-market-analysis-webapp npm run type-check:backend

# Run tests
echo "ğŸ§ª Running tests..."
docker-compose exec -T stock-market-analysis-webapp npm run test:ci

echo "âœ… All quality checks passed! Proceeding with commit..."
